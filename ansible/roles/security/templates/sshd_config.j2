# SSH Daemon Configuration - Security Hardened
# Generated by Ansible - Jterrazz Infrastructure

# Network settings
Port {{ security_ssh_port }}
AddressFamily inet
ListenAddress 0.0.0.0

# Protocol settings
Protocol 2

# Host key settings
HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_ecdsa_key
HostKey /etc/ssh/ssh_host_ed25519_key

# Encryption settings
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
MACs hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com,hmac-sha2-256,hmac-sha2-512
KexAlgorithms curve25519-sha256@libssh.org,ecdh-sha2-nistp521,ecdh-sha2-nistp384,ecdh-sha2-nistp256,diffie-hellman-group-exchange-sha256

# Authentication settings
PermitRootLogin {{ security_ssh_permit_root_login }}
PubkeyAuthentication {{ security_ssh_pubkey_authentication }}
PasswordAuthentication {{ security_ssh_password_authentication }}
ChallengeResponseAuthentication {{ security_ssh_challenge_response_auth }}
GSSAPIAuthentication {{ security_ssh_gss_api_authentication }}
UsePAM yes

# Security settings
MaxAuthTries {{ security_ssh_max_auth_tries }}
MaxSessions 2
MaxStartups 2

# Timeout settings
ClientAliveInterval {{ security_ssh_client_alive_interval }}
ClientAliveCountMax {{ security_ssh_client_alive_count_max }}

# Feature restrictions
X11Forwarding {{ security_ssh_x11_forwarding }}
AllowTcpForwarding no
AllowStreamLocalForwarding no
GatewayPorts no
PermitTunnel no

# Misc settings
Compression no
TCPKeepAlive no
UsePrivilegeSeparation sandbox
StrictModes yes
IgnoreRhosts yes
HostbasedAuthentication no
PermitEmptyPasswords no
PermitUserEnvironment no

# Logging
SyslogFacility AUTH
LogLevel VERBOSE

# Banner
Banner none

# Subsystem
Subsystem sftp internal-sftp

# Only allow specific users (can be customized)
AllowUsers root ubuntu

# Deny users (add as needed)  
# DenyUsers baduser

# IP restrictions (handled by UFW, but can add here too)
# Match Address 192.168.1.0/24
#   PasswordAuthentication yes
