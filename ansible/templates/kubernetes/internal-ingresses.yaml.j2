---
# Internal services IngressRoutes
# TLS certificates managed separately by cert-manager (after CRDs are installed)
# Target annotation uses Tailscale IP for DNS records

# ArgoCD IngressRoute
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: argocd
  namespace: platform-gitops
  annotations:
    external-dns.alpha.kubernetes.io/hostname: argocd.jterrazz.com
    external-dns.alpha.kubernetes.io/target: "{{ tailscale_ip }}"
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`argocd.jterrazz.com`)
      kind: Rule
      services:
        - name: argocd-server
          port: 80
  tls:
    secretName: argocd-tls
